@using System.Security.Claims
@model List<babiltr.Models.Jobs.GetJobViewModel>
@{
    var id = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}
<!doctype html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Job Listing Bootstrap 5 Template" />
    <meta name="keywords" content="Onepage, creative, modern, bootstrap 5, multipurpose, clean, Job Listing, Job Board, Job, Job Portal" />
    <meta name="author" content="Shreethemes" />
    <meta name="website" content="https://shreethemes.in" />
    <meta name="email" content="support@shreethemes.in" />
    <meta name="version" content="1.0.0" />

</head>

<body>
    <!-- Hero Start -->
    <section class="bg-half-260 d-table w-100" style="background: url('/thema/jobnova_v1.0.1/html/images/hero/bg.jpg');">
        <div class="bg-overlay bg-gradient-overlay"></div>
        <!-- Yıldız Kayma Animasyonu -->
        <div class="shooting-stars">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
        <div class="container">
            <div class="row mt-5 justify-content-center">
                <div class="col-lg-10">
                    <div class="title-heading text-center">
                        <h1 class="heading text-white fw-bold">Size en uygun işi şimdi bulun</h1>
                        <p class="para-desc text-white-50 mx-auto mb-0">Serbest çevirmenlere anında ulaşın</p>
                        <div class="d-md-flex justify-content-between align-items-center bg-white shadow rounded p-2 mt-4">
                            <form action="/Jobs/GetJobs" class="card-body text-start">
                                <div class="registration-form text-dark text-start">
                                    <div class="row g-lg-0">
                                        <div class="col-lg-3 col-md-6 col-12">
                                            <div class="mb-3 mb-sm-0">
                                                <label class="form-label d-none fs-6">Search :</label>
                                                <div class="filter-search-form position-relative filter-border">
                                                    <i data-feather="search" class="fea icon-20 icons"></i>
                                                    <input name="keyword" type="text" id="job-keyword" class="form-control filter-input-box bg-light border-0" placeholder="Yazınız..."
                                                           style="color: #888; opacity: 1;">
                                                </div>
                                            </div>
                                        </div><!--end col-->

                                        <div class="col-lg-3 col-md-6 col-12">
                                            <div class="mb-3 mb-sm-0">
                                                <label class="form-label d-none fs-6">JobCategory:</label>
                                                <div class="filter-search-form position-relative filter-border">
                                                    <i data-feather="calendar" class="fea icon-20 icons"></i>
                                                    <select class="form-select" data-trigger name="JobCategory" id="choices-location" aria-label="Default select example">
                                                        <option value="">Seçiniz</option>
                                                        <option value="PB">Proje Bazlı</option>
                                                        <option value="OT">Tek Seferlik</option>
                                                        <option value="LT">Uzun Süreli</option>
                                                        <option value="PT">Yarı Zamanlı</option>
                                                        <option value="IN">Staj</option>
                                                        <option value="OTR">Diğer</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div><!--end col-->


                                        <div class="col-lg-3 col-md-6 col-12">
                                            <div class="mb-3 mb-sm-0">
                                                <label class="form-label d-none fs-6">Type :</label>
                                                <div class="filter-search-form relative filter-border">
                                                    <i data-feather="briefcase" class="fea icon-20 icons"></i>
                                                    <select class="form-select" data-trigger name="jobType" id="choices-type" aria-label="Default select example">
                                                        <option value="">Seçiniz</option>
                                                        <option value="TR" data-icon="feather-code">Çeviri</option>
                                                        <option value="LO" data-icon="feather-layers">Yerelleştirme</option>
                                                        <option value="ED" data-icon="feather-edit">Düzenleme</option>
                                                        <option value="PR" data-icon="feather-check-circle">Son Okuma</option>
                                                        <option value="RE" data-icon="feather-file-text">Redaksiyon</option>
                                                        <option value="CW" data-icon="feather-pen-tool">İçerik Üretimi</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div><!--end col-->

                                        <div class="col-lg-3 col-md-6 col-12">
                                            <input type="submit" id="search" name="search" style="height: 60px;" class="btn btn-primary searchbtn w-100" value="ARA">
                                        </div><!--end col-->
                                    </div><!--end row-->
                                </div>
                            </form><!--end form-->
                        </div>

                        <div class="mt-2">
                            <span class="text-white-50"><span class="text-white">Popüler Aramalar :</span> Akademik Çeviri, Tıp Çevirisi, Teknik Çeviri, Hukuki Çeviri, Yerellleştirme</span>
                        </div>
                    </div>
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end container-->
    </section><!--end section-->
    <div class="position-relative">
        <div class="shape overflow-hidden text-white">
            <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
            </svg>
        </div>
    </div>
    <!-- Hero End -->
    <!-- Start -->
    <section class="section">
        <div class="container">
            <div class="row justify-content-center mb-4 pb-2">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h4 class="title mb-3">Popüler Çeviri Hizmetleri</h4>
                        <p class="text-muted para-desc mx-auto mb-0">Web sitemiz üzerinden tüm açık çeviri ilanlarını keşfedebilir ya da hemen ilan yayınlayabilirsiniz.</p>
                    </div>
                </div><!--end col-->
            </div><!--end row-->

            <div class="row">
                <div class="col-12 mt-4">
                    <div class="tiny-five-item">
                        <div class="tiny-slide">
                            <div class="card features rounded shadow position-relative overflow-hidden m-2" style="height: 250px;">
                                <div class="card-body p-0">
                                    <div class="card-img" style="width: 100%; height: 100%; overflow: hidden;">
                                        <img src="/images/mainpage/teknik-ceviri.jpg" class="img-fluid" alt="" style="width: 100%; height: 100%; object-fit: cover;">
                                        <div class="card-overlay"></div>
                                    </div>
                                    <div class="position-absolute bottom-0 start-0 m-3">
                                        <a href="" class="title h5 text-white">Teknik Çeviri</a>
                                    </div>
                                </div>
                            </div>
                        </div><!--end col-->

                        <div class="tiny-slide">
                            <div class="card features rounded shadow position-relative overflow-hidden m-2" style="height: 250px;">
                                <div class="card-body p-0">
                                    <div class="card-img" style="width: 100%; height: 100%; overflow: hidden;">
                                        <img src="/images/mainpage/hukuki-ceviri.jpg" class="img-fluid" alt="" style="width: 100%; height: 100%; object-fit: cover;">
                                        <div class="card-overlay"></div>
                                    </div>
                                    <div class="position-absolute bottom-0 start-0 m-3">
                                        <a href="" class="title h5 text-white">Hukuki Çeviri</a>
                                    </div>
                                </div>
                            </div>
                        </div><!--end col-->

                        <div class="tiny-slide">
                            <div class="card features rounded shadow position-relative overflow-hidden m-2" style="height: 250px;">
                                <div class="card-body p-0">
                                    <div class="card-img" style="width: 100%; height: 100%; overflow: hidden;">
                                        <img src="/images/mainpage/akademik-ceviri.jpg" class="img-fluid" alt="" style="width: 100%; height: 100%; object-fit: cover;">
                                        <div class="card-overlay"></div>
                                    </div>
                                    <div class="position-absolute bottom-0 start-0 m-3">
                                        <a href="" class="title h5 text-white">Akademik Çeviri</a>
                                    </div>
                                </div>
                            </div>
                        </div><!--end col-->

                        <div class="tiny-slide">
                            <div class="card features rounded shadow position-relative overflow-hidden m-2" style="height: 250px;">
                                <div class="card-body p-0">
                                    <div class="card-img" style="width: 100%; height: 100%; overflow: hidden;">
                                        <img src="/images/mainpage/medikal-ceviri.jpg" class="img-fluid" alt="" style="width: 100%; height: 100%; object-fit: cover;">
                                        <div class="card-overlay"></div>
                                    </div>
                                    <div class="position-absolute bottom-0 start-0 m-3">
                                        <a href="" class="title h5 text-white">Tıp Çevirisi</a>
                                    </div>
                                </div>
                            </div>
                        </div><!--end col-->

                        <div class="tiny-slide">
                            <div class="card features rounded shadow position-relative overflow-hidden m-2" style="height: 250px;">
                                <div class="card-body p-0">
                                    <div class="card-img" style="width: 100%; height: 100%; overflow: hidden;">
                                        <img src="/images/mainpage/web-ceviri.jpg" class="img-fluid" alt="" style="width: 100%; height: 100%; object-fit: cover;">
                                        <div class="card-overlay"></div>
                                    </div>
                                    <div class="position-absolute bottom-0 start-0 m-3">
                                        <a href="" class="title h5 text-white">Web Sitesi Çevirisi</a>
                                    </div>
                                </div>
                            </div>
                        </div><!--end col-->

                        <div class="tiny-slide">
                            <div class="card features rounded shadow position-relative overflow-hidden m-2" style="height: 250px;">
                                <div class="card-body p-0">
                                    <div class="card-img" style="width: 100%; height: 100%; overflow: hidden;">
                                        <img src="/images/mainpage/Tercume_Reklam Cevirisi.jpg" class="img-fluid" alt="" style="width: 100%; height: 100%; object-fit: cover;">
                                        <div class="card-overlay"></div>
                                    </div>
                                    <div class="position-absolute bottom-0 start-0 m-3">
                                        <a href="" class="title h5 text-white">Reklam & Pazarlama Çevirisi</a>
                                    </div>
                                </div>
                            </div>
                        </div><!--end col-->
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-100 mt-60">
            <div class="row g-4 align-items-center">
                <div class="col-lg-6 col-md-6 mb-5">
                    <div class="about-left">
                        <div class="position-relative shadow rounded img-one">
                            <img img src="~/images/siteelements/mainpagepic1.jpg" class="img-fluid rounded" alt="work-image">
                        </div>
                    </div>
                </div><!--end col-->
                <div class="col-lg-6 col-md-6">
                    <div class="section-title ms-lg-5">
                        <h4 class="title mb-3">Çeviri ilanlarını takip edin ve size en uygun olanını bulun.</h4>
                        <p class="text-muted para-desc mb-0">Türkiye’nin serbest çeviri platformuna şimdi kayıt olun ve işverenlerle anında iletişim kurun!</p>

                        <ul class="list-unstyled text-muted mb-0 mt-3">
                            <li class="mb-1"><span class="text-primary h5 me-2"><i class="mdi mdi-check-circle-outline align-middle"></i></span>İstediğiniz ilana sınır olmaksızın başvurun.</li>
                            <li class="mb-1"><span class="text-primary h5 me-2"><i class="mdi mdi-check-circle-outline align-middle"></i></span>İşverenlerle şimdi iletişime geçin.</li>
                            <li class="mb-1"><span class="text-primary h5 me-2"><i class="mdi mdi-check-circle-outline align-middle"></i></span>Ödemelerinizi güvenle alın.</li>
                        </ul>

                        <div class="mt-4">
                            <a href="/Info/AboutUs" class="btn btn-primary">Hakkımızda <i class="mdi mdi-arrow-right align-middle"></i></a>
                        </div>
                    </div>
                </div><!--end col-->

            </div><!--end row-->
        </div><!--end container-->

        <div class="container mt-100 mt-60">
            <div class="row justify-content-center mb-4 pb-2">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h4 class="title mb-3">Popüler İş İlanları</h4>
                    </div>
                </div><!--end col-->
            </div><!--end row-->

            <div class="row g-4 mt-0">
                @if (Model == null)
                {
                    <div class="col-12">
                        <div class="alert alert-info text-center">
                            @ViewBag.Message
                        </div>
                    </div>
                }
                else
                {
                    foreach (var job in Model)
                    {
                        <div class="col-12">
                            <div class="job-post job-post-list rounded shadow p-4 d-md-flex align-items-center justify-content-between position-relative">
                                <div class="d-flex align-items-center w-300px">
                                    <div class="image-container" style="width: 90px; height: 75px; overflow: hidden; border-radius: 0.5rem; position: relative; background-color: white;">
                                        <img src="/images/siteelements/işler.jpg" class="avatar" style="width: 100%; height: 100%; object-fit: cover;" alt="İş İlanları">
                                    </div>
                                    <div class="ms-3">
                                        <a href="/Jobs/JobDetails/@job.JobId" class="h5 title text-dark">@job.Title</a>
                                    </div>
                                </div>

                                <div class=" row mt-2">
                                    @foreach (var skill in job.Skills.Split(','))
                                    {
                                        <span class="badge bg-soft-success rounded-pill me-2">@skill.Trim()</span>
                                    }
                                </div>

                                <div class="d-flex align-items-center justify-content-between d-md-block mt-3 mt-md-0 w-150px">
                                    <span class="badge bg-soft-primary rounded-pill">@job.JobType</span>
                                    <span class="badge bg-soft-primary rounded-pill">@job.JobCategory</span>
                                    <div class="d-flex align-items-center">
                                        <span class="text-muted fw-medium mt-md-2 me-1">
                                            <i data-feather="clock" class="fea icon-sm align-middle"></i>
                                            @((DateTime.Now - job.PostedDate).Days) gün önce
                                        </span>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center justify-content-between d-md-block mt-2 mt-md-0 w-130px">
                                    <span class="text-muted d-flex align-items-center">
                                        <i data-feather="map-pin" class="fea icon-sm me-1 align-middle"></i>
                                        @job.Country
                                    </span>
                                    <span class="d-flex fw-medium mt-md-2">₺@job.Price</span>
                                </div>
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <div class="mt-3 mt-md-0">
                                        <a href="/Account/Login" class="btn btn-sm btn-primary w-full ms-md-1">Şimdi Başvur</a>
                                    </div>
                                }

                                @if (User.Identity.IsAuthenticated && id != job.UserID.ToString())
                                {
                                    <div class="mt-3 mt-md-0">
                                        @if (job.IsApplied)
                                        {
                                            <button class="btn btn-sm btn-secondary w-full ms-md-1" disabled>Başvuruldu</button>
                                        }
                                        else
                                        {
                                            <a href="/Applications/JobApply/@job.JobId" class="btn btn-sm btn-primary w-full ms-md-1">Şimdi Başvur</a>
                                        }
                                    </div>

                                }
                            </div>
                        </div>

                        <!--end col-->
                    }
                }
                <div class="col-12">
                    <div class="text-center">
                        <a href="/Jobs/GetJobs" class="btn btn-link primary text-muted">Daha Fazla İş Görüntüle <i class="mdi mdi-arrow-right"></i></a>
                    </div>
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end container-->
    </section><!--end section-->
    <!-- End -->
    <!-- Back to top -->
    <a href="#" onclick="topFunction()" id="back-to-top" class="back-to-top rounded fs-5"><i data-feather="arrow-up" class="fea icon-sm align-middle"></i></a>
    <!-- Back to top -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const stars = document.querySelectorAll(".shooting-stars span");
            stars.forEach(star => {
                star.style.setProperty('--random-x', Math.random());
                star.style.setProperty('--random-y', Math.random());
            });
        });
    </script>
</body>
</html>