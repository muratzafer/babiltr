@{
    Layout = "~/Views/Shared/_LayoutDark.cshtml";
}
<!doctype html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BabilTR Hata Sayfası</title>
    <meta name="description" content="BabilTR Hata Sayfası" />
    <meta name="keywords" content="Hata, Sayfa Bulunamadı, Sunucu Hatası" />
    <meta name="author" content="BabilTR" />
    <style>
    .logo-image {
        width: 64px;    
        height: 64px;       
        border: 2px solid #000; 
        border-radius: 8px; 
        padding: 4px;        
        margin-top: 40px;
    }
</style>
</head>

<body>
    <!-- Start -->
    <section class="position-relative bg-soft-primary">
        <div class="container">
            <div class="row">
                <div class="col-12 p-0">
                    <div class="d-flex flex-column min-vh-100 justify-content-center px-md-5 py-5 px-4">
                        <div class="text-center">
                            <a href="~/Home/MainPage"><img src="~/images/siteelements/babilicon.png" alt="BabilTR Logo" class="logo-image"></a>
                        </div>
                        <div class="title-heading text-center my-auto">
                            <img src="~/thema/jobnova_v1.0.1/html/images/error.png" class="img-fluid" alt="Hata">
                            <h3 class="text-dark text-uppercase mt-2 mb-4 fw-bold">
                                @if (ViewData["ErrorCode"] != null)
                                {
                                    <text>Hata Kodu: @ViewData["ErrorCode"]</text>
                                }
                                else
                                {
                                    <text>Bir Hata Oluştu</text>
                                }
                            </h3>

                            <h3 class="text-dark text-uppercase mt-2 mb-4 fw-bold">
                                @if (ViewData["ErrorMessage"] != null && ViewData["ErrorCode"]?.ToString() == "500")
                            {
                                    <strong>Hata Detayı:</strong> @ViewData["ErrorMessage"]
                            }
                            </h3>

                            <p class="text-muted para-desc mx-auto">
                                @if (ViewData["ErrorCode"]?.ToString() == "404")
                                {
                                    <text>Oops, bu biraz utandırıcı. Aradığınız sayfa bulunamadı gibi görünüyor.</text>
                                }
                                else
                                {
                                    <text>Sunucuda bir hata oluştu. Lütfen daha sonra tekrar deneyiniz.</text>
                                }
                            </p>

                            <div class="mt-4">
                                <a href="~/Home/MainPage" class="btn btn-primary">Ana Sayfaya Dön</a>
                            </div>
                        </div>
                    </div>
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end container-->
    </section><!--end section-->

</body>

</html>
