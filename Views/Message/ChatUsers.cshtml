@model X.PagedList.IPagedList<babiltr.Models.Message.ChatUserViewModel>
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "ChatUsers";
    Layout = "~/Views/Shared/_LayoutDark.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>bs4 Message Chat Box</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/chat.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/chatuser.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.css" integrity="sha256-NAxhqDvtY0l4xn+YVa6WjAcmd94NNfttjNsDmNatFVc=" crossorigin="anonymous" />
    <style>
        /* Tüm sayfayı tam yükseklikte yap */
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        /* İçeriği sayfa yüksekliğine göre düzenle */
        .content-wrapper {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Footer en aşağıda sabit kalır */
        footer {
            background-color: #343a40;
            color: white;
            padding: 1rem;
            text-align: center;
        }
    </style>
</head>
<body>

    <section class="section content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="candidate-list">
                    @if (!Model.Any())
                    {
                        <div class="col-12 text-center">
                            <p class="text-muted">Henüz bir sohbetiniz bulunmamaktadır.</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var user in Model)
                        {
                            <div class="candidate-list-box card mt-4">
                                <div class="p-4 card-body">
                                    <div class="align-items-center row">
                                        <div class="col-auto">
                                            <div class="candidate-list-images">
                                                <img src="@user.UserPhoto" alt="" class="avatar-md img-thumbnail rounded-circle" />
                                            </div>
                                        </div>
                                        <div class="col-lg-5">
                                            <div class="candidate-list-content mt-3 mt-lg-0">
                                                <h5 class="fs-19 mb-3">
                                                    <a class="primary-link" href="#">@user.FullName</a>
                                                </h5>

                                                <div class="message-container">
                                                    @if (user.LastMessageSenderId == user.UserId)
                                                    {
                                                        <div class="sent-message">
                                                            <p class="text-muted mb-0" style="font-size: 1.1em;">
                                                                <i class="mdi mdi-check-circle text-success"></i> @user.LastMessageContent
                                                            </p>
                                                            <span class="message-status text-success mb-0" style="font-size: 1em;">Gönderildi</span>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="received-message">
                                                            <p class="text-muted mb-0">
                                                                <i class="mdi mdi-message-reply text-info"></i> @user.LastMessageContent
                                                            </p>
                                                            <span class="message-status text-info mb-0">Alındı</span>
                                                        </div>
                                                    }
                                                </div>

                                                <ul class="list-inline mb-0 text-muted">
                                                    <li class="list-inline-item"><i class="mdi mdi-clock"></i> @user.LastMessageDate?.ToString("g")</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="favorite-icon">
                                        <a href="/Message/Chat?chatid=@user.ChatId" title="Sohbet" class="chat-message"><i class="mdi mdi-message-text fs-18"></i></a>
                                        <a href="/Message/BlockChat/@user.ChatId" title="Engelle" class="block-user" onclick="return confirmBlock();">
                                            <i class="mdi mdi-account-off fs-18"></i>
                                        </a>
                                        <a href="/Info/Contact/" title="Kullanıcıyı Bildir" class="report-user">
                                            <i class="mdi mdi-alert-circle fs-18"></i>
                                        </a>
                                        <a href="/Message/DeleteMessage/@user.ChatId" title="Mesajları Sil" class="delete-message" onclick="return confirmDelete();">
                                            <i class="mdi mdi-delete fs-18"></i>
                                        </a>

                                    </div>
                                </div>
                            </div>
                        }
                    }  
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mt-4 pt-2">
                <ul class="pagination justify-content-center mb-0">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("ChatUsers", new { page = Model.PageNumber - 1 })" aria-label="Previous">
                                <span aria-hidden="true"><i class="mdi mdi-chevron-left fs-6"></i></span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <a class="page-link" aria-label="Previous">
                                <span aria-hidden="true"><i class="mdi mdi-chevron-left fs-6"></i></span>
                            </a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        if (i == Model.PageNumber)
                        {
                            <li class="page-item active"><a class="page-link" href="#">@i</a></li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href="@Url.Action("ChatUsers", new { page = i })">@i</a></li>
                        }
                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("ChatUsers", new { page = Model.PageNumber + 1 })" aria-label="Next">
                                <span aria-hidden="true"><i class="mdi mdi-chevron-right fs-6"></i></span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <a class="page-link" aria-label="Next">
                                <span aria-hidden="true"><i class="mdi mdi-chevron-right fs-6"></i></span>
                            </a>
                        </li>
                    }
                </ul>
            </div><!--end col-->
        </div><!--end row-->
    </div>
</section>

<script>
    function confirmBlock() {
        return confirm("Bu kullanıcıyı engellemek istediğinize emin misiniz?");
    }

    function confirmDelete() {
        return confirm("Tüm mesajları silmek istediğinize emin misiniz?");
    }
</script>
</body>
</html>