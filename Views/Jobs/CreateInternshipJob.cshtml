
@{
    ViewData["Title"] = "CreateInternshipJob";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model babiltr.Models.Jobs.CreateInternshipJobViewModel
<!doctype html>
@{
    var id = User.Claims.FirstOrDefault(c => c.Type == "UserId")?.Value;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BabilTR İlan Oluşturma Sayfası</title>
    <meta name="description" content="Job Listing Bootstrap 5 Template" />
    <meta name="keywords" content="Onepage, creative, modern, bootstrap 5, multipurpose, clean, Job Listing, Job Board, Job, Job Portal" />
    <meta name="author" content="Shreethemes" />
    <meta name="website" content="https://shreethemes.in" />
    <meta name="email" content="support@shreethemes.in" />
    <meta name="version" content="1.0.0" />
    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

</head>

<body>
    <!-- Hero Start -->
    <section class="bg-half-170 d-table w-100" style="background: url('/thema/jobnova_v1.0.1/html/images/hero/bg.jpg');">
        <div class="bg-overlay bg-gradient-overlay"></div>
        <!-- Yıldız Kayma Animasyonu -->
        <div class="shooting-stars">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
        <div class="container">
            <div class="row mt-5 justify-content-center">
                <div class="col-12">
                    <div class="title-heading text-center">
                        <h5 class="heading fw-semibold mb-0 sub-heading text-white title-dark">Stajyer İlanı Oluştur</h5>
                    </div>
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end container-->
    </section><!--end section-->
    <div class="position-relative">
        <div class="shape overflow-hidden text-white">
            <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
            </svg>
        </div>
    </div>
    <!-- Hero End -->
    <!-- Job apply form Start -->
    <section class="section bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8">
                    <div class="card border-0">
                        <form id="JobForm" class="rounded shadow p-4" action="/Jobs/CreateInternshipJob" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="row">
                                <h5 class="mb-3">İş Detayları :</h5>
                                <input type="hidden" value="@id">

                                <div class="col-12">
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold">İş Başlığı :</label>
                                        <input asp-for="Title" name="Title" class="form-control" placeholder="Başlık :">
                                    </div>
                                </div>

                                <div class="row align-items-center">
                                    <!-- Original Dil -->
                                    <div class="col-md-5">
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Orijinal Dil:</label>
                                            <input asp-for="OriginalLanguage" name="OriginalLanguage" type="text" class="form-control" placeholder="Örn: İngilizce">
                                        </div>
                                    </div>

                                    <!-- Ok İkonu -->
                                    <div class="col-md-1 text-center">
                                        <i class="bi bi-arrow-repeat" style="font-size: 25px;"></i>
                                    </div>

                                    <!-- Çevrilecek Dil -->
                                    <div class="col-md-5">
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Çevrilecek Dil:</label>
                                            <input asp-for="TargetLanguage" name="TargetLanguage" type="text" class="form-control" placeholder="Örn: Almanca">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold">Açıklama :</label>
                                        <textarea asp-for="Description" rows="4" name="Description" class="form-control" placeholder="İşi Tanımla :"></textarea>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold">İş Türü:</label>
                                        <select asp-for="JobType" name="JobType" class="form-control form-select">
                                            <option value="">Seçiniz</option>
                                            <option value="TR">Çeviri</option>
                                            <option value="LO">Yerelleştirme</option>
                                            <option value="ED">Düzenleme</option>
                                            <option value="PR">Son Okuma</option>
                                            <option value="RE">Redaksiyon</option>
                                            <option value="CW">İçerik Üretimi</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-5">
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold">Ücret:</label>
                                        <input asp-for="Price" name="Price" type="number" class="form-control">
                                        <small class="form-text text-muted">Ücret yok ise lütfen "0" yazınız.</small>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <input type="submit" id="submit2" class="submitBnt btn btn-primary" value="Yayınla">
                                </div>
                            </div>
                        </form>
                    </div><!--end custom-form-->
                </div>
            </div>
        </div><!--end container-->
    </section><!--end section-->
    <!-- Job apply form End -->
    <!-- Back to top -->
    <a href="#" onclick="topFunction()" id="back-to-top" class="back-to-top rounded fs-5"><i data-feather="arrow-up" class="fea icon-sm align-middle"></i></a>
    <!-- Back to top -->
</body>
</html>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const stars = document.querySelectorAll(".shooting-stars span");
        stars.forEach(star => {
            star.style.setProperty('--random-x', Math.random());
            star.style.setProperty('--random-y', Math.random());
        });
    });
</script>

