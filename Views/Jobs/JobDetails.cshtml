@model babiltr.Models.Jobs.GetJobViewModel
@{
    var id = User.Claims.FirstOrDefault(c => c.Type == "UserId")?.Value;
}
@{
    Layout = "~/Views/Shared/_LayoutDark.cshtml";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BabilTR İlan Detaylarının Sayfası</title>
    <meta name="description" content="Job Listing Bootstrap 5 Template" />
    <meta name="keywords" content="Onepage, creative, modern, bootstrap 5, multipurpose, clean, Job Listing, Job Board, Job, Job Portal" />
    <meta name="author" content="Shreethemes" />
    <meta name="website" content="https://shreethemes.in" />
    <meta name="email" content="support@shreethemes.in" />
    <meta name="version" content="1.0.0" />
</head>

<body>
    <!-- Start -->
    <section class="bg-half d-table w-100 bg-light">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-8 col-md-6 col-12">

                    <div class="d-lg-flex align-items-center p-4 rounded shadow bg-white mb-4">

                        <div class="ms-lg-3 mt-3 mt-lg-0">
                            <h4>@Model.Title</h4>

                            <ul class="list-unstyled mb-0">
                                <li class="d-inline-flex align-items-center text-muted"><i data-feather="map-pin" class="fea icon-sm text-primary me-1"></i>@Model.City, @Model.Country</li>
                            </ul>
                        </div>
                    </div>

                    <h5>İş Tanımı : </h5>
                    <p class="text-muted">@Model.Description</p>

                    <h5 class="mt-4">Gerekli Beceriler :</h5>
                    <ul class="list-unstyled">
                        @if (Model.Skills != null && Model.Skills.Any())
                        {
                            foreach (var skill in Model.Skills.Split(','))
                            {
                                <li class="text-muted mt-2">
                                    <i data-feather="arrow-right" class="fea icon-sm text-primary me-2"></i>
                                    @skill.Trim()
                                </li>
                            }
                        }
                        else
                        {
                            <p class="text-muted">Beceri bilgisi bulunmamaktadır.</p>
                        }
                    </ul>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        @if (Model.JobCategory == "IN")
                        {
                            <a href="/Applications/JobApply/@Model.JobId" class="btn btn-sm btn-success w-full ms-md-1 mt-5">ŞİMDİ Başvur</a>
                        }
                        else
                        {
                            <a href="/Applications/JobApply/@Model.JobId" class="btn btn-sm btn-primary w-full ms-md-1 mt-5">ŞİMDİ Başvur</a>
                        }
                    }
                    else
                    {
                       @if (Model.Translator)
                        {
                            @if (Model.IsApplied)
                            {
                                <button class="btn btn-sm btn-secondary w-full ms-md-1" disabled>Başvuruldu</button>
                            }
                            else
                            {
                                @if (Model.Status == "Publish")
                                {
                                    @if (Model.JobCategory == "IN")
                                    {
                                        <a href="/Applications/JobApply/@Model.JobId" class="btn btn-sm btn-success w-full ms-md-1 mt-5">ŞİMDİ Başvur</a>
                                    }
                                    else
                                    {
                                        <a href="/Applications/JobApply/@Model.JobId" class="btn btn-sm btn-primary w-full ms-md-1 mt-5">ŞİMDİ Başvur</a>
                                    }
                                }
                            }
                        }
                    }
         
                 
                </div><!--end col-->

                <div class="col-lg-4 col-md-6 col-12">
                    <div class="card bg-white rounded shadow sticky-bar">
                        <div class="p-4">
                            <h5 class="mb-0">İş Bilgileri</h5>
                        </div>

                        <div class="card-body p-4 border-top">

                        <div class="d-flex widget align-items-center mt-3">
                            <i data-feather="map-pin" class="fea icon-ex-md me-3"></i>
                            <div class="flex-1">
                                <h6 class="widget-title mb-0">Lokasyon:</h6>
                                <small class="text-primary mb-0">@Model.City, @Model.Country</small>
                            </div>
                        </div>

                        <div class="d-flex widget align-items-center mt-3">
                            <i data-feather="monitor" class="fea icon-ex-md me-3"></i>
                            <div class="flex-1">
                                <h6 class="widget-title mb-0">İş Tipi:</h6>
                                <small class="text-primary mb-0">@Model.JobType</small>
                            </div>
                        </div>

                        <div class="d-flex widget align-items-center mt-3">
                            <i data-feather="briefcase" class="fea icon-ex-md me-3"></i>
                            <div class="flex-1">
                                <h6 class="widget-title mb-0">Deneyim:</h6>
                                <small class="text-primary mb-0">+@Model.Experience Yıl</small>
                            </div>
                        </div>

                        <div class="d-flex widget align-items-center mt-3">
                            <i data-feather="dollar-sign" class="fea icon-ex-md me-3"></i>
                            <div class="flex-1">
                                <h6 class="widget-title mb-0">Ücret:</h6>
                                <small class="text-primary mb-0">@Model.Price TL</small>
                            </div>
                        </div>

                        <div class="d-flex widget align-items-center mt-3">
                            <i data-feather="clock" class="fea icon-ex-md me-3"></i>
                            <div class="flex-1">
                                <h6 class="widget-title mb-0">İlan Tarihi:</h6>
                                <small class="text-primary mb-0">@Model.PostedDate.ToString("dd MMM, yyyy")</small>
                            </div>
                        </div>
                       </div>
                      </div>
                    </div>
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end container-->

    </section>
    <!-- End -->
    <!-- Back to top -->
    <a href="#" onclick="topFunction()" id="back-to-top" class="back-to-top rounded fs-5"><i data-feather="arrow-up" class="fea icon-sm align-middle"></i></a>
    <!-- Back to top -->
</body>
</html>