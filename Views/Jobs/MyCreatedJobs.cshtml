@model X.PagedList.IPagedList<babiltr.Models.Jobs.GetJobViewModel>
@using X.PagedList.Mvc.Core;
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BabilTR İşverenin Oluşturduğu İlanlar Sayfası</title>
    <meta name="description" content="Job Listing Bootstrap 5 Template" />
    <meta name="keywords" content="Onepage, creative, modern, bootstrap 5, multipurpose, clean, Job Listing, Job Board, Job, Job Portal" />
    <meta name="author" content="Shreethemes" />
    <meta name="website" content="https://shreethemes.in" />
    <meta name="email" content="support@shreethemes.in" />
    <meta name="version" content="1.0.0" />
</head>

<body>
    <!-- Hero Start -->
    <section class="bg-half-170 d-table w-100" style="background: url('/thema/jobnova_v1.0.1/html/images/hero/bg.jpg');">
        <div class="bg-overlay bg-gradient-overlay"></div>
        <div class="shooting-stars">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
        <div class="container">
            <div class="row mt-5 justify-content-center">
                <div class="col-12">
                    <div class="title-heading text-center">
                        <h5 class="heading fw-semibold mb-0 sub-heading text-white title-dark">Yayındaki İş İlanları</h5>
                    </div>
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end container-->
    </section><!--end section-->
    <div class="position-relative">
        <div class="shape overflow-hidden text-white">
            <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
            </svg>
        </div>
    </div>
    <!-- Hero End -->
    <!-- Start -->
    <section class="section">
        <div class="container mt-60">
            <div class="row g-4">
                @if (!Model.Any())
                {
                    <div class="col-12 text-center">
                        <p class="text-muted">Henüz bir ilan bulunmamaktadır.</p>
                    </div>
                }
                else
                {
                    @foreach (var job in Model)
                    {
                        <div class="col-12">
                            <div class="job-post job-post-list rounded shadow p-4 d-md-flex align-items-center justify-content-between position-relative">
                                <div class="d-flex align-items-center w-310px">
                                    <div class="image-container" style="width: 90px; height: 75px; overflow: hidden; border-radius: 0.5rem; position: relative; background-color: white;">
                                        <img src="/images/siteelements/işler.jpg" class="avatar" style="width: 100%; height: 100%; object-fit: cover;" alt="İş İlanları">
                                    </div>
                                    <div class="ms-3">
                                        <a href="/Jobs/JobDetails/@job.JobId" class="h5 title text-dark">@job.Title</a>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center justify-content-between d-md-block mt-3 mt-md-0 w-120px flex-wrap">
                                    <span class="badge bg-soft-primary rounded-pill">@job.JobType</span>
                                    <div class="d-flex align-items-center">
                                        <span class="text-muted fw-medium mt-md-2 me-1">
                                            <i data-feather="clock" class="fea icon-sm align-middle"></i>
                                            @((DateTime.Now - job.PostedDate).Days) day ago
                                        </span>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center justify-content-between d-md-block mt-2 mt-md-0 w-130px">
                                    <span class="text-muted d-flex align-items-center">
                                        <i data-feather="map-pin" class="fea icon-sm me-1 align-middle"></i>
                                        @job.Country
                                    </span>
                                    <span class="d-flex fw-medium mt-md-2">₺@job.Price</span>
                                </div>

                                <div class="mt-3 mt-md-0">
                                    <a href="/Applications/JobApplications/@job.JobId" class="btn btn-sm btn-info w-100 d-block mb-2">Başvuruları Görüntüle</a>
                                    <a href="/Jobs/JobDelete/@job.JobId" class="btn btn-sm btn-danger w-100 d-block">İş İptal</a>
                                </div>
                            </div>
                        </div>

                        <!--end col-->
                    }
                }
            
            </div><!--end row-->
        </div>
        <div class="row">
            <div class="col-12 mt-4 pt-2">
                <ul class="pagination justify-content-center mb-0">
                    @if (Model != null)
                        {
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                                <a class="page-link" href="@Url.Action("MyCreatedJobs", new { page = Model.PageNumber - 1 })" aria-label="Previous">
                                <span aria-hidden="true"><i class="mdi mdi-chevron-left fs-6"></i></span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <a class="page-link" aria-label="Previous">
                                <span aria-hidden="true"><i class="mdi mdi-chevron-left fs-6"></i></span>
                            </a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        if (i == Model.PageNumber)
                        {
                            <li class="page-item active"><a class="page-link" href="#">@i</a></li>
                        }
                        else
                        {
                                <li class="page-item"><a class="page-link" href="@Url.Action("MyCreatedJobs", new { page = i })">@i</a></li>
                        }
                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                                <a class="page-link" href="@Url.Action("MyCreatedJobs", new { page = Model.PageNumber + 1 })" aria-label="Next">
                                <span aria-hidden="true"><i class="mdi mdi-chevron-right fs-6"></i></span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <a class="page-link" aria-label="Next">
                                <span aria-hidden="true"><i class="mdi mdi-chevron-right fs-6"></i></span>
                            </a>
                        </li>
                    }
                        }
                </ul>
            </div><!--end col-->
        </div><!--end row-->
        </div><!--end container-->

    </section><!--end section-->
    <!-- End -->
    <!-- Back to top -->
    <a href="#" onclick="topFunction()" id="back-to-top" class="back-to-top rounded fs-5"><i data-feather="arrow-up" class="fea icon-sm align-middle"></i></a>
    <!-- Back to top -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const stars = document.querySelectorAll(".shooting-stars span");
            stars.forEach(star => {
                star.style.setProperty('--random-x', Math.random());
                star.style.setProperty('--random-y', Math.random());
            });
        });
    </script>
</body>
</html>