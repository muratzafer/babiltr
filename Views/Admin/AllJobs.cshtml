    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
        <!-- Navbar -->
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
            <div class="container-fluid py-1 px-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Sayfalar</a></li>
                        <li class="breadcrumb-item text-sm text-dark active" aria-current="page">İş İlanları</li>
                    </ol>
                    <h6 class="font-weight-bolder mb-0">İş İlanları</h6>
                </nav>
            </div>
        </nav>
        <!-- End Navbar -->
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card my-4">
                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div class="bg-gradient-info shadow-primary border-radius-lg pt-4 pb-3">
                                <h6 class="text-white text-capitalize ps-3">İş İlanları Tablosu</h6>
                            </div>
                        </div>
                        <div class="card-body px-0 pb-2">
                            <div class="table-responsive p-0">
                                <table class="table align-items-center justify-content-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">İş İlanı</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Ücret</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Durum</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Yayın Süresi veya İş Tamamlanma Yüzdesi</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var job in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex px-2">
                                                        <div class="my-auto">
                                                            <h6 class="mb-0 text-sm">@job.Title</h6>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <p class="text-sm font-weight-bold mb-0">@job.Price₺</p>
                                                </td>
                                                <td>
                                                    @if (job.Status == "Publish")
                                                    {
                                                        <span class="text-xs font-weight-bold">Yayında</span>
                                                    }
                                                    else if (job.Status == "Active")
                                                    {
                                                        <span class="text-xs font-weight-bold">Aktif</span>
                                                    }
                                                    else if (job.Status == "Payment")
                                                    {
                                                        <span class="text-xs font-weight-bold">Ödeme</span>
                                                    }
                                                    else if (job.Status == "Revision")
                                                    {
                                                        <span class="text-xs font-weight-bold">Revizyon</span>
                                                    }
                                                    else if (job.Status == "Completed")
                                                    {
                                                        <span class="text-xs font-weight-bold">Tamamlandı</span>
                                                    }
                                                </td>
                                                <td class="align-middle text-center">
                                                    @if (job.Status != "Publish")
                                                    {
                                                        <div class="d-flex align-items-center justify-content-center">
                                                           
                                                                <div class="progress">
                                                                    <div class="progress-bar bg-success progress-bar-striped active" style="width: @job.CompletionPercentage%;"></div>
                                                                </div>
                                                            
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        var postedDate = job.PostedDate; 
                                                        var expiryDate = job.ExpiryDate; 
                                                        var remainingDays = (expiryDate.HasValue && expiryDate.Value > DateTime.Now)
                                                        ? (expiryDate.Value - DateTime.Now).Days
                                                        : 0; 

                                                        <div class="text-center d-flex justify-content-center">
                                                            <div class="circle-progress" data-value="@remainingDays" data-max="30">
                                                                <span>@remainingDays</span>
                                                                <span>Gün</span>
                                                            </div>
                                                        </div>
                                                    }
                                                </td>
                                                <td class="align-middle text-center">
                                                    <div class="d-flex justify-content-center">
                                                        <a href="@Url.Action("JobDetails", "Jobs", new { id = job.JobId })"
                                                           class="text-info me-2"
                                                           data-toggle="tooltip"
                                                           data-original-title="Görüntüle">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a href="@Url.Action("AdminJobDelete", "Jobs", new { id = job.JobId })"
                                                           class="text-danger"
                                                           data-toggle="tooltip"
                                                           data-original-title="Sil"
                                                           onclick="return confirm('Bu iş ilanını silmek istediğinizden emin misiniz?');">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <div class="row">
                                    <div class="col-12 mt-4 pt-2">
                                        <ul class="pagination justify-content-center mb-0">
                                            @if (Model.HasPreviousPage)
                                            {
                                                <li class="page-item">
                                                    <a class="page-link" href="@Url.Action("AllJobs", new { page = Model.PageNumber - 1 })" aria-label="Previous" style="color: #318BEC;">
                                                        <span aria-hidden="true"><i class="mdi mdi-chevron-left fs-6" style="color: #318BEC;"></i></span>
                                                    </a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="page-item disabled">
                                                    <a class="page-link" aria-label="Previous" style="color: #318BEC ;">
                                                        <span aria-hidden="true"><i class="mdi mdi-chevron-left fs-6" style="color: #318BEC;"></i></span>
                                                    </a>
                                                </li>
                                            }

                                            @for (int i = 1; i <= Model.PageCount; i++)
                                            {
                                                if (i == Model.PageNumber)
                                                {
                                                    <li class="page-item active">
                                                        <a class="page-link" href="#" style="background-color: #318BEC ; border-color: #318BEC; color: white;">@i</a>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="page-item">
                                                        <a class="page-link" href="@Url.Action("AllJobs", new { page = i })" style="color: #318BEC;">@i</a>
                                                    </li>
                                                }
                                            }

                                            @if (Model.HasNextPage)
                                            {
                                                <li class="page-item">
                                                    <a class="page-link" href="@Url.Action("AllJobs", new { page = Model.PageNumber + 1 })" aria-label="Next" style="color: #318BEC;">
                                                        <span aria-hidden="true"><i class="mdi mdi-chevron-right fs-6" style="color: #318BEC;"></i></span>
                                                    </a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="page-item disabled">
                                                    <a class="page-link" aria-label="Next" style="color: #318BEC;">
                                                        <span aria-hidden="true"><i class="mdi mdi-chevron-right fs-6" style="color: #318BEC;"></i></span>
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script>
        function toggleMenu() {
        const menu = document.querySelector('.mobile-menu');
        if (menu.style.display === 'flex') {
        menu.style.display = 'none';
        } else {
        menu.style.display = 'flex';
        }
        }
    </script>
</body>

</html>

